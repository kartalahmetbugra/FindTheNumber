<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Game">

    <TextView
        android:id="@+id/wlc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:text="Hoş Geldiniz"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/guess"
        app:layout_constraintEnd_toEndOf="@+id/guess"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/guess" />

    <TextView
        android:id="@+id/basari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Skorunuz"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/guess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:ems="10"
        android:hint="Lütfen tahmininizi giriniz"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="249dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/tiklama"
        android:onClick="devam"
        android:text="Devam"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/guess"
        app:layout_constraintStart_toStartOf="@+id/guess"
        app:layout_constraintTop_toBottomOf="@+id/wlc" />

    <TextView
        android:id="@+id/syc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="108dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>